{% assign header_menu = section.settings.header_menu %}
{% assign is_center = section.settings.is_menu_center %}
{% assign has_dark_mode = settings.has_dark_mode %}

<div id="section-header">
  <nav
    class="navbar fixed-top navbar-expand-lg bg-body-tertiary shadow"
  >
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        {% if settings.logo != blank %}
          {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
          {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
          {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
          {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
          {{
            settings.logo
            | image_url: width: 600
            | image_tag:
              widths: widths,
              height: logo_height,
              width: settings.logo_width,
              alt: logo_alt,
              sizes: sizes,
              preload: true
          }}
        {% else %}
          {{ shop.name }}
        {% endif %}
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#header-menu"
        aria-controls="header-menu"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse {% if is_center %}justify-content-center{% endif %}" id="header-menu">
        <ul class="navbar-nav">
          <li class="nav-link d-lg-none">
            <h6 class="dropdown-header">Menu</h6>
          </li>
          {%- for link in header_menu.links -%}
            <li class="nav-item">
              <a class="nav-link {% if link.current %}active{% endif %}" aria-current="page" href="{{ link.url }}">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
        <ul class="navbar-nav d-lg-none">
          <li class="nav-link"><hr class="dropdown-divider"></li>
          <li class="nav-link">
            <h6 class="dropdown-header">Utilities</h6>
          </li>
          {%- if has_dark_mode -%}
            <li class="nav-item">
              <button @click="handleDarkMode" class="nav-link align-items-center d-flex column-gap-3">
                <i
                  class="bi"
                  :class="{'bi-moon-fill': isDarkMode, 'bi-sun-fill': !isDarkMode}"
                ></i>
                <p class="mb-0">[[isDarkMode ? 'Dark' : 'Light']] mode</p>
              </button>
            </li>
          {%- endif -%}
          <li class="nav-item">
            <a href="/cart" class="nav-link align-items-center d-flex column-gap-3">
              <i class="bi bi-bag-fill"></i>
              <p class="mb-0">Cart</p>
            </a>
          </li>

          {%- if customer -%}
            <li class="nav-link"><hr class="dropdown-divider"></li>
            <li class="nav-link">
              <h6 class="dropdown-header">Customer</h6>
            </li>
            <li class="nav-link">
              <h6 class="dropdown-header">Welcome {{ customer.name }}</h6>
            </li>
            <li class="nav-link"><a class="dropdown-item" href="/account">My Profile</a></li>
            <li class="nav-link"><a class="dropdown-item" href="/customers/order">My Orders</a></li>
            <li class="nav-link"><hr class="dropdown-divider"></li>
            <li class="nav-link">
              <a href="/account/logout" class="dropdown-item">Logout</a>
            </li>
          {%- else -%}
            {% unless canonical_url contains 'account/login' or canonical_url contains 'account/register' %}
              <li class="nav-link"><hr class="dropdown-divider"></li>
              <li class="nav-link">
                <h6 class="dropdown-header">Customer</h6>
              </li>
              <li class="nav-item">
                <a href="account/login" class="nav-link"> Login </a>
              </li>
              <li class="nav-item">
                <a href="account/register" class="nav-link"> Register </a>
              </li>
            {% endunless %}
          {%- endif -%}
        </ul>
      </div>
      <ul class="navbar-nav d-none d-lg-flex">
        {%- if has_dark_mode -%}
          <li class="nav-item">
            <button @click="handleDarkMode" class="nav-link">
              <i
                class="bi"
                :class="{'bi-moon-fill': isDarkMode, 'bi-sun-fill': !isDarkMode}"
              ></i>
            </button>
          </li>
        {%- endif -%}
        <li class="nav-item">
          <button class="nav-link">
            <i class="bi bi-bag-fill"></i>
          </button>
        </li>

        {%- if customer -%}
          <li class="nav-item dropdown">
            <button
              type="button"
              class="nav-link dropdown"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="bi bi-person-fill"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-lg-end">
              <li>
                <h6 class="dropdown-header">Welcome {{ customer.name }}</h6>
              </li>
              <li><a class="dropdown-item" href="/account">My Profile</a></li>
              <li><a class="dropdown-item" href="/customers/order">My Orders</a></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a href="/account/logout" class="dropdown-item">Logout</a>
              </li>
            </ul>
          </li>
        {%- else -%}
          {% unless canonical_url contains 'account/login' or canonical_url contains 'account/register' %}
            <li class="nav-item">
              <a href="account/login" class="btn"> Login </a>
            </li>
            <li class="nav-item">
              <a href="account/register" class="btn btn-primary"> Register </a>
            </li>
          {% endunless %}
        {%- endif -%}
      </ul>
    </div>
  </nav>
</div>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "settings": [
    {
      "type": "link_list",
      "label": "Header Menu",
      "id": "header_menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "label": "Is menu centered?",
      "default": false,
      "id": "is_menu_center"
    }
  ]
}
{% endschema %}
